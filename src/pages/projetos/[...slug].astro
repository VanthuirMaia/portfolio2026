---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projetos = await getCollection('projetos');
  return projetos.map((projeto) => ({
    params: { slug: projeto.slug },
    props: { projeto },
  }));
}

const { projeto } = Astro.props;
const { Content } = await projeto.render();
const base = import.meta.env.BASE_URL;
---

<Layout title={projeto.data.titulo}>
  <article class="projeto">
    <div class="container">
      <a href={base} class="voltar">&larr; Voltar para Home</a>

      <header class="projeto-header">
        <h1>{projeto.data.titulo}</h1>
        <p class="objetivo">{projeto.data.objetivo}</p>

        <div class="stack">
          {projeto.data.stack.map((tech) => (
            <span class="tech">{tech}</span>
          ))}
        </div>

        <div class="links">
          {projeto.data.link_projeto && projeto.data.link_projeto.length > 0 && (
            <a href={projeto.data.link_projeto} target="_blank" class="btn">
              Ver Projeto
            </a>
          )}
          {projeto.data.link_repositorio && projeto.data.link_repositorio.length > 0 && (
            <a href={projeto.data.link_repositorio} target="_blank" class="btn btn-secundario">
              Repositório
            </a>
          )}
        </div>
      </header>

      <!-- Imagem principal -->
      <div class="imagem-principal">
        <img src={`${base}${projeto.data.imagens[0].replace(/^\//, '')}`} alt={projeto.data.titulo} />
      </div>

      <!-- Conteúdo do projeto -->
      <div class="conteudo">
        <Content />
      </div>

      <!-- Galeria de imagens -->
      {projeto.data.imagens.length > 1 && (
        <div class="galeria-section">
          <h2>Screenshots</h2>
          <div class="galeria">
            {projeto.data.imagens.slice(1).map((img, i) => (
              <img src={`${base}${img.replace(/^\//, '')}`} alt={`${projeto.data.titulo} - Imagem ${i + 2}`} />
            ))}
          </div>
        </div>
      )}
    </div>
  </article>
</Layout>

<style>
  .projeto {
    width: 100%;
    min-height: 100vh;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem;
  }

  .voltar {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    color: var(--cor-texto-secundario);
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .voltar:hover {
    color: var(--cor-primaria);
  }

  .projeto-header {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .objetivo {
    font-size: 1.2rem;
    color: var(--cor-texto-secundario);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tech {
    background: rgba(99, 102, 241, 0.2);
    color: var(--cor-secundaria);
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
  }

  .links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .btn {
    display: inline-block;
    background: var(--cor-primaria);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.2s;
  }

  .btn:hover {
    background: var(--cor-secundaria);
    transform: translateY(-2px);
  }

  .btn-secundario {
    background: transparent;
    border: 2px solid var(--cor-primaria);
    color: var(--cor-primaria);
  }

  .btn-secundario:hover {
    background: var(--cor-primaria);
    color: white;
  }

  .imagem-principal {
    margin-bottom: 3rem;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .imagem-principal img {
    width: 100%;
    height: auto;
    display: block;
  }

  .conteudo {
    background: var(--cor-superficie);
    padding: 2rem;
    border-radius: 12px;
    margin-bottom: 3rem;
  }

  .conteudo :global(h2) {
    font-size: 1.6rem;
    margin: 2rem 0 1rem;
    color: var(--cor-texto);
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .conteudo :global(h2:first-child) {
    margin-top: 0;
  }

  .conteudo :global(h3) {
    font-size: 1.2rem;
    margin: 1.5rem 0 0.75rem;
    color: var(--cor-primaria);
  }

  .conteudo :global(p) {
    color: var(--cor-texto-secundario);
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .conteudo :global(ul) {
    color: var(--cor-texto-secundario);
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .conteudo :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .conteudo :global(strong) {
    color: var(--cor-texto);
  }

  .galeria-section {
    margin-top: 3rem;
  }

  .galeria-section h2 {
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
    color: var(--cor-texto);
  }

  .galeria {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .galeria img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: transform 0.2s;
  }

  .galeria img:hover {
    transform: scale(1.02);
  }

  /* Tablet e Mobile */
  @media (max-width: 768px) {
    .container {
      padding: 1.5rem;
    }

    h1 {
      font-size: 2rem;
    }

    .objetivo {
      font-size: 1.1rem;
    }

    .conteudo {
      padding: 1.5rem;
    }

    .conteudo :global(h2) {
      font-size: 1.4rem;
    }

    .conteudo :global(h3) {
      font-size: 1.1rem;
    }

    .galeria {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .galeria-section h2 {
      font-size: 1.5rem;
    }
  }

  /* Mobile */
  @media (max-width: 480px) {
    .container {
      padding: 1rem;
    }

    h1 {
      font-size: 1.75rem;
    }

    .objetivo {
      font-size: 1rem;
    }

    .tech {
      font-size: 0.75rem;
      padding: 0.3rem 0.6rem;
    }

    .links {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      text-align: center;
    }

    .conteudo {
      padding: 1.25rem;
    }

    .conteudo :global(h2) {
      font-size: 1.3rem;
    }

    .conteudo :global(h3) {
      font-size: 1rem;
    }

    .galeria-section h2 {
      font-size: 1.3rem;
    }
  }
</style>
