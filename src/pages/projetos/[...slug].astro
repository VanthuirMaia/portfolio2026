---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projetos = await getCollection('projetos');
  return projetos.map((projeto) => ({
    params: { slug: projeto.slug },
    props: { projeto },
  }));
}

const { projeto } = Astro.props;
const { Content } = await projeto.render();
const base = import.meta.env.BASE_URL;
---

<Layout title={projeto.data.titulo}>
  <article class="projeto">
    <div class="container">
      <a href={base} class="voltar">&larr; Voltar</a>

      <header class="projeto-header">
        <h1>{projeto.data.titulo}</h1>
        <p class="objetivo">{projeto.data.objetivo}</p>

        <div class="meta">
          <div class="stack">
            {projeto.data.stack.map((tech) => (
              <span class="tech">{tech}</span>
            ))}
          </div>

          <div class="links">
            {projeto.data.link_projeto && (
              <a href={projeto.data.link_projeto} target="_blank" class="btn">
                Ver Projeto
              </a>
            )}
            {projeto.data.link_repositorio && (
              <a href={projeto.data.link_repositorio} target="_blank" class="btn btn-secundario">
                Reposit√≥rio
              </a>
            )}
          </div>
        </div>
      </header>

      <div class="galeria">
        {projeto.data.imagens.map((img, i) => (
          <img src={`${base}${img.replace(/^\//, '')}`} alt={`${projeto.data.titulo} - Imagem ${i + 1}`} />
        ))}
      </div>

      <div class="conteudo">
        <Content />
      </div>
    </div>
  </article>
</Layout>

<style>
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .voltar {
    display: inline-block;
    margin-bottom: 2rem;
    color: var(--cor-texto-secundario);
  }

  .voltar:hover {
    color: var(--cor-texto);
  }

  .projeto-header {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .objetivo {
    font-size: 1.25rem;
    color: var(--cor-texto-secundario);
    margin-bottom: 2rem;
  }

  .meta {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech {
    background: rgba(99, 102, 241, 0.2);
    color: var(--cor-secundaria);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.875rem;
  }

  .links {
    display: flex;
    gap: 1rem;
  }

  .btn {
    display: inline-block;
    background: var(--cor-primaria);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    transition: background 0.2s;
  }

  .btn:hover {
    background: var(--cor-secundaria);
    color: white;
  }

  .btn-secundario {
    background: var(--cor-superficie);
    border: 1px solid var(--cor-primaria);
    color: var(--cor-primaria);
  }

  .btn-secundario:hover {
    background: var(--cor-primaria);
    color: white;
  }

  .galeria {
    display: grid;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .galeria img {
    width: 100%;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .conteudo {
    background: var(--cor-superficie);
    padding: 2rem;
    border-radius: 12px;
  }

  .conteudo :global(h2) {
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
    color: var(--cor-texto);
  }

  .conteudo :global(h2:first-child) {
    margin-top: 0;
  }

  .conteudo :global(h3) {
    font-size: 1.25rem;
    margin: 1.5rem 0 0.75rem;
    color: var(--cor-texto);
  }

  .conteudo :global(p) {
    color: var(--cor-texto-secundario);
    margin-bottom: 1rem;
  }

  .conteudo :global(ul) {
    color: var(--cor-texto-secundario);
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .conteudo :global(li) {
    margin-bottom: 0.5rem;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 1.75rem;
    }

    .meta {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
