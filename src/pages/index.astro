---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const projetos = await getCollection('projetos');
const projetosDestaque = projetos.filter(p => p.data.destaque);
const todosOsProjetos = projetos.sort((a, b) => b.data.data.localeCompare(a.data.data));
---

<Layout title="Meu Portfólio">
  <!-- Hero -->
  <section class="hero">
    <div class="hero-content">
      <h1>Olá, eu sou <span class="destaque">Vanthuir Maia</span></h1>
      <p>Software Engineer especializado em Backend Development com Python, Django e FastAPI.</p>
      <a href="#projetos" class="btn">Ver Projetos</a>
    </div>
  </section>

  <!-- Projetos -->
  <section id="projetos" class="projetos">
    <div class="container">
      <h2>Meus Projetos</h2>

      <div class="grid-projetos">
        {todosOsProjetos.map((projeto) => (
          <a href={`/projetos/${projeto.slug}`} class="card-projeto">
            <div class="card-imagem">
              <img src={projeto.data.imagens[0]} alt={projeto.data.titulo} />
              {projeto.data.destaque && <span class="badge">Destaque</span>}
            </div>
            <div class="card-conteudo">
              <h3>{projeto.data.titulo}</h3>
              <p>{projeto.data.descricao}</p>
              <div class="stack">
                {projeto.data.stack.map((tech) => (
                  <span class="tech">{tech}</span>
                ))}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Sobre -->
  <section id="sobre" class="sobre">
    <div class="container">
      <h2>Sobre Mim</h2>
      <div class="sobre-content">
        <p>
          Software Engineer com <strong>4+ anos</strong> construindo sistemas escaláveis.
          Experiência comprovada como <strong>Data Engineer</strong> e <strong>AI Engineer</strong>,
          desenvolvendo pipelines de dados e soluções de automação inteligente.
        </p>

        <div class="skills-grid">
          <div class="skill-card">
            <h3>Backend & APIs</h3>
            <p>Python, Django, FastAPI, APIs RESTful, PostgreSQL, Redis, Microservices</p>
          </div>

          <div class="skill-card">
            <h3>Data & AI</h3>
            <p>ETL Pipelines, LangChain, OpenAI, NLP, Deep Learning, Sistemas RAG</p>
          </div>

          <div class="skill-card">
            <h3>DevOps</h3>
            <p>AWS (Certificado), Docker, Docker Swarm, n8n, Automação</p>
          </div>
        </div>

        <h3 class="experiencias-titulo">Experiências Recentes</h3>
        <div class="experiencias">
          <div class="exp-item">
            <strong>AI Engineer</strong> - Residência em IA Generativa (Grupo Show/Omnilink)
            <p>SDK para Business Intelligence com NLP, agentes conversacionais, Deep Learning</p>
          </div>
          <div class="exp-item">
            <strong>Backend Developer & Automation Engineer</strong> - AXIO
            <p>Sistema de automação com redução de 60% em custos, agentes de IA no WhatsApp (1000+ msg/dia)</p>
          </div>
          <div class="exp-item">
            <strong>Data Engineer</strong> - MiRoute
            <p>Arquitetura de dados para logística, APIs REST com Django, ETL pipelines</p>
          </div>
        </div>

        <p class="formacao">
          <strong>Formação:</strong> Mestrado em Engenharia de Computação
        </p>
      </div>
    </div>
  </section>

  <!-- Contato -->
  <section id="contato" class="contato">
    <div class="container">
      <h2>Contato</h2>
      <p>Quer trabalhar comigo? Entre em contato!</p>
      <div class="links-contato">
        <a href="mailto:vanthuir.dev@gmail.com" target="_blank">Email</a>
        <a href="https://github.com/VanthuirMaia" target="_blank">GitHub</a>
        <a href="https://www.linkedin.com/in/vanthuir-maia-47767810b/" target="_blank">LinkedIn</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .hero .destaque {
    color: var(--cor-primaria);
  }

  .hero p {
    font-size: 1.25rem;
    color: var(--cor-texto-secundario);
    margin-bottom: 2rem;
  }

  .btn {
    display: inline-block;
    background: var(--cor-primaria);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    transition: background 0.2s;
  }

  .btn:hover {
    background: var(--cor-secundaria);
    color: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .grid-projetos {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  .card-projeto {
    background: var(--cor-superficie);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
    color: var(--cor-texto);
  }

  .card-projeto:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    color: var(--cor-texto);
  }

  .card-imagem {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .card-imagem img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--cor-primaria);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .card-conteudo {
    padding: 1.5rem;
  }

  .card-conteudo h3 {
    margin-bottom: 0.5rem;
  }

  .card-conteudo p {
    color: var(--cor-texto-secundario);
    font-size: 0.9rem;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech {
    background: rgba(99, 102, 241, 0.2);
    color: var(--cor-secundaria);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
  }

  .sobre, .contato {
    background: var(--cor-superficie);
  }

  .sobre p, .contato p {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    color: var(--cor-texto-secundario);
  }

  .sobre-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .sobre-content > p {
    max-width: 100%;
    text-align: center;
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .skill-card {
    background: var(--cor-fundo);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid rgba(99, 102, 241, 0.2);
  }

  .skill-card h3 {
    color: var(--cor-primaria);
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .skill-card p {
    text-align: left;
    font-size: 0.9rem;
  }

  .experiencias-titulo {
    text-align: center;
    color: var(--cor-texto);
    margin: 2rem 0 1rem;
  }

  .experiencias {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .exp-item {
    background: var(--cor-fundo);
    padding: 1rem 1.5rem;
    border-radius: 8px;
    border-left: 3px solid var(--cor-primaria);
  }

  .exp-item strong {
    color: var(--cor-texto);
  }

  .exp-item p {
    text-align: left;
    margin-top: 0.5rem;
    font-size: 0.9rem;
  }

  .formacao {
    text-align: center;
    margin-top: 1rem;
  }

  .links-contato {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 2rem;
  }

  .links-contato a {
    background: var(--cor-fundo);
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }
  }
</style>
