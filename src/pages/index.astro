<style>
  .hero {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .hero-container {
    display: flex;
    align-items: center;
    gap: 3rem;
    max-width: 900px;
  }

  .foto-perfil {
    width: 250px;
    height: 250px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid var(--cor-primaria);
    box-shadow: 0 0 30px rgba(99, 102, 241, 0.3);
  }

  .hero-content {
    text-align: left;
  }

  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .hero .destaque {
    color: var(--cor-primaria);
  }

  .hero p {
    font-size: 1.25rem;
    color: var(--cor-texto-secundario);
    margin-bottom: 2rem;
  }

  .hero .descricao {
    font-size: 1.25rem;
    color: var(--cor-texto-secundario);
    margin-bottom: 1rem;
  }

  .hero .tagline {
    font-size: 1.1rem;
    color: var(--cor-primaria);
    margin-bottom: 0.75rem;
    font-weight: 500;
  }

  .hero .impacto {
    font-size: 1rem;
    color: var(--cor-texto);
    margin-bottom: 2rem;
    font-style: italic;
  }

  .btn {
    display: inline-block;
    background: var(--cor-primaria);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    transition: background 0.2s;
  }

  .btn:hover {
    background: var(--cor-secundaria);
    color: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .grid-projetos {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  .card-projeto {
    background: var(--cor-superficie);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
    color: var(--cor-texto);
  }

  .card-projeto:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    color: var(--cor-texto);
  }

  .card-imagem {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .card-imagem img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--cor-primaria);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .card-conteudo {
    padding: 1.5rem;
  }

  .card-conteudo h3 {
    margin-bottom: 0.5rem;
  }

  .card-conteudo p {
    color: var(--cor-texto-secundario);
    font-size: 0.9rem;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech {
    background: rgba(99, 102, 241, 0.2);
    color: var(--cor-secundaria);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
  }

  .sobre, .contato {
    background: var(--cor-superficie);
  }

  .sobre p, .contato p {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    color: var(--cor-texto-secundario);
  }

  .sobre-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .sobre-content > p {
    max-width: 100%;
    text-align: center;
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .skill-card {
    background: var(--cor-fundo);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid rgba(99, 102, 241, 0.2);
  }

  .skill-card h3 {
    color: var(--cor-primaria);
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .skill-card p {
    text-align: left;
    font-size: 0.9rem;
  }

  .experiencias-titulo {
    text-align: center;
    color: var(--cor-texto);
    margin: 2rem 0 1rem;
  }

  .experiencias {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .exp-item {
    background: var(--cor-fundo);
    padding: 1rem 1.5rem;
    border-radius: 8px;
    border-left: 3px solid var(--cor-primaria);
  }

  .exp-item strong {
    color: var(--cor-texto);
  }

  .exp-item p {
    text-align: left;
    margin-top: 0.5rem;
    font-size: 0.9rem;
  }

  .formacao {
    text-align: center;
    margin-top: 1rem;
  }

  .links-contato {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 2rem;
  }

  .links-contato a {
    background: var(--cor-fundo);
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 1.5rem;
    }

    .hero-container {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .hero-content {
      text-align: center;
    }

    .foto-perfil {
      width: 200px;
      height: 200px;
    }

    .hero h1 {
      font-size: 2rem;
    }

    .hero p {
      font-size: 1.1rem;
    }

    .container {
      padding: 3rem 1.5rem;
    }

    .grid-projetos {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.5rem;
    }

    .skills-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 600px) {
    .hero {
      padding: 1rem;
    }

    .foto-perfil {
      width: 180px;
      height: 180px;
    }

    .hero h1 {
      font-size: 1.75rem;
    }

    .hero p {
      font-size: 1rem;
    }

    .container {
      padding: 2.5rem 1.25rem;
    }

    .grid-projetos {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .links-contato {
      flex-direction: column;
      gap: 1rem;
    }

    .links-contato a {
      width: 100%;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .hero {
      min-height: calc(100vh - 100px);
      padding: 1rem;
    }

    .hero-container {
      gap: 1.5rem;
    }

    .foto-perfil {
      width: 150px;
      height: 150px;
    }

    .hero h1 {
      font-size: 1.5rem;
    }

    .hero p {
      font-size: 0.95rem;
      margin-bottom: 1.5rem;
    }

    .btn {
      padding: 0.65rem 1.5rem;
      font-size: 0.9rem;
    }

    .container {
      padding: 2rem 1rem;
    }

    h2 {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .card-conteudo h3 {
      font-size: 1.1rem;
    }

    .sobre-content > p {
      font-size: 1rem;
    }

    .exp-item {
      padding: 0.75rem 1rem;
    }

    .exp-item strong {
      font-size: 0.95rem;
    }

    .exp-item p {
      font-size: 0.85rem;
    }
  }

</style>
